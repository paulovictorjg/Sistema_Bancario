import textwrap

def menu():
    menu = """\n
    ================ MENU ================
    ||      [1]\tDepositar           ||
    ||      [2]\tSacar               ||
    ||      [3]\tExtrato             ||
    ||      [5]\tNovo usuário        ||
    ||      [6]\tNova conta          ||
    ||      [7]\tListar contas       ||
    ||      [4]\tSair                ||
    ======================================
    => """
    return input(textwrap.dedent(menu))

def depositar(saldo, valor, extrato, /):
    if valor > 0:
      saldo += valor
      extrato += f"deposito: R$ {valor:.2f}\n"
      print(f"Novo deposito de {valor:.2f}")
      print (f"Saldo atual {saldo:.2f}")

    else:
      print ("Valor incorreto! o deposito nao foi realizado")
      
    return saldo, extrato

def sacar(*, saldo, valor, extrato, limite, numero_saques, limite_saques):
    excedeu_saldo = valor > saldo
    excedeu_limite = valor > limite
    excedeu_saques = numero_saques >= limite_saques

    if excedeu_saldo:
        print(f"Operação Falhou! Você não tem saldo suficiente.\nSeu saldo é de {saldo:.2f}")

    elif excedeu_limite:
        print(f"Operação falhou! O valor excede o valor do limite disponivel. Por favor informe outro valor!\nLimite de saque da conta {limite:.2f}")

    elif excedeu_saques:
        print("Operação falhou! Você excedeu o limite diario de saque. Por favor vá ate uma agencia mais proxima!")

    elif valor > 0:
        saldo -= valor
        extrato += f"saque: R$ {valor:.2f}\n"
        numero_saques += 1
        print("\nSaque realizado com sucesso!")

    else:
        print("Operação falhou! O valor informado é inválido.")

    return saldo, extrato

def exibir_extrato(saldo, /, *, extrato):
    print("\n###  extrato   ###\n")
    print("Não existem movimentações para esta conta.\n" if not extrato else extrato)
    print(f"\nSaldo:\t\tR$ {saldo:.2f}")
    print("##################")

def criar_usuario(usuarios):
    cpf = input("\nInforme o CPF (somente número): \n")
    usuario = filtrar_usuario(cpf, usuarios)

    if usuario:
        print("\nUsuario com CPF Já cadastrado!\n")
        opcao = input("Deseja cadastrar um novo usuario? (s/n): ")
        if opcao.lower() == 's':
            return criar_usuario(usuarios)
        else: 
            print('\nObrigado por usar nosso sistema!\n')
            return

    nome = input("\nInforme o nome completo: \n")
    data_nascimento = input("Informe a data de nascimento (dd-mm-aaaa): \n")
    endereco = input("Informe o endereço (logradouro, nro - bairro - cidade/sigla estado): \n")

    usuarios.append({"nome": nome, "data_nascimento": data_nascimento, "cpf": cpf, "endereco": endereco})

    print("\nUsuário criado com sucesso!\n")

def criar_conta(agencia, numero_conta, usuarios):
    cpf = input("Informe o CPF do usuário: ")
    usuario = filtrar_usuario(cpf, usuarios)

    if usuario:
        print(f"\n Conta criada com sucesso para o cliente {usuario['nome']} cpf {usuario['cpf']}!\n")
        return {"agencia": agencia, "numero_conta": numero_conta, "usuario": usuario}

    print("\nNão existe nenhum usuario com este CPF cadastrado!")
    opcao = input("Deseja cadastrar um novo usuário? (s/n): ")

    if opcao.lower() == 's':
        criar_usuario(usuarios)
        # Após criar o usuário, você pode tentar criar a conta novamente
        return criar_conta(agencia, numero_conta, usuarios)
    else: 
        print('\nObrigado por usar nosso sistema!\n')

def filtrar_usuario(cpf, usuarios):
    usuarios_filtrados = [usuario for usuario in usuarios if usuario["cpf"] == cpf]
    return usuarios_filtrados[0] if usuarios_filtrados else None

def listar_contas(contas):
    if not contas:
        print('\n Ainda não há nenhuma conta cadastrada!\n')
    else:
        for conta in contas:
            linha = f"""\
                Agência:\t{conta['agencia']}
                C/C:\t\t{conta['numero_conta']}
                Titular:\t{conta['usuario']['nome']}
            """
            print("=" * 100)
            print(textwrap.dedent(linha))

def main():
    LIMITE_SAQUES = 3
    AGENCIA = "0001"

    saldo = 0
    limite = 500
    extrato = ""
    numero_saques = 0
    usuarios = []
    contas = []

    while True:
        opcao = menu()

        if opcao == "1":
            valor = float(input("Informe o valor do depósito: "))

            saldo, extrato = depositar(saldo, valor, extrato)

        elif opcao == "2":
            valor = float(input("Informe o valor do saque: "))

            saldo, extrato = sacar(
                saldo=saldo,
                valor=valor,
                extrato=extrato,
                limite=limite,
                numero_saques=numero_saques,
                limite_saques=LIMITE_SAQUES,
            )

        elif opcao == "3":
            exibir_extrato(saldo, extrato=extrato)

        elif opcao == "5":
            criar_usuario(usuarios)

        elif opcao == "6":
            numero_conta = len(contas) + 1
            conta = criar_conta(AGENCIA, numero_conta, usuarios)

            if conta:
                contas.append(conta)

        elif opcao == "7":
            listar_contas(contas)

        elif opcao == "4":
            break

        else:
            print("Operação inválida, por favor selecione novamente a operação desejada.")

main()
